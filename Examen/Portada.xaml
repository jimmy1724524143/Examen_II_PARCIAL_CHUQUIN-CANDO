<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen.Portada">
    <StackLayout BackgroundColor="Azure">
        <Label Text="UNIVERSIDAD DE LAS FUERZAS ARMADAS ESPE"
               HorizontalTextAlignment="Center"
               TextColor="Black"
               FontSize="25"
               FontAttributes="Bold"
               Margin="10"
               HorizontalOptions="Center"/>
        
        
        <Label Text="Aplicaciones Moviles"
               FontSize="25"
               FontAttributes="Bold"
                TextColor="Blue"
               HorizontalOptions="Center"/>

        <Image Source="https://i.ibb.co/n8hXHwR/Logo-ESPEOk.png"/>
        <Button Text="COMENZAR"
                TextTransform="None"
                BackgroundColor="Violet"
                CornerRadius="30"
                FontSize="Small"
                FontAttributes="Bold"
                x:Name="btninicio"
                Clicked="btninicio_Clicked"/>
        
        <Frame VerticalOptions="FillAndExpand"
               Margin="10"
               CornerRadius="30"/>
        


    </StackLayout>
</ContentPage>